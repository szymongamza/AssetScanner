<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AssetScanner.MainPage">

    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" >
            <Button ScaleX="2" ScaleY="2" Text="Select stocktaking" Clicked="StocktakingsButton_Clicked" FontSize="22" Margin="0,0,0,100" />
            <Button ScaleX="2" ScaleY="2" Text="Scan for info" Clicked="AssetInfoButton_Clicked" FontSize="22" Margin="0,0,0,0" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
